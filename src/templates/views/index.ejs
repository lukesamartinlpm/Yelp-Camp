<%- layout('../layouts/boilerplate') %> 
<div class="d-flex flex-column mt-3 ">
  <div id="cluster-map"></div>

  <h1>All Campgrounds</h1>

<a href="/campgrounds/new">Add Campground</a>
  

  <% for(camps of campground){ %>
    <div class="card mb-3">
      <div class="row">
      <% if(camps.images.length) {%> 
  <img src="<%= camps.images[0].url %>" class="img-fluid col-md-4">
  <% }else{%><img src="https://res.cloudinary.com/ddrukjarm/image/upload/v1622503786/YelpCamp/x5cr2smwhvmmktpozbqs.jpg" class="img-fluid col-md-4"> 
  <% } %> 
  <div class="card-body col-md-8">
    <h5 class="card-title"><%= camps.title %> </h5>
    <p class="card-text"><%= camps.description %> </p>
    <p class="text-muted"><%= camps.location %> </p>
    <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">View <%= camps.title %></a>
  </div>
    </div>
  </div>
 <% } %>

</div>
